@model IEnumerable<Clinical_Appointment_System.Models.Doctor>

@{
    ViewData["Title"] = "Doctors List";
}

<h2>Doctors</h2>
<a asp-action="Create" class="btn btn-primary">Add New Doctor</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Specialty</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.Id</td>
                <td>@doctor.Name</td>
                <td>@doctor.Specialty</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
