@model Clinical_Appointment_System.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4 border-0" style="width: 400px;">
        <h2 class="text-center text-primary fw-bold">Login</h2>
        <p class="text-center text-muted">Access your account</p>

        <form asp-action="LogIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input class="form-check-input" asp-for="RememberMe">
                <label class="form-check-label">
                    @Html.DisplayNameFor(model => model.RememberMe)
                </label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a href="/Account/Register" class="text-decoration-none">Don't have an account? Register</a><br>
            <a href="#" class="text-decoration-none text-danger">Forgot Password?</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
