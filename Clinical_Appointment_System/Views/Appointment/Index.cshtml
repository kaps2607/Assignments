@model IEnumerable<Clinical_Appointment_System.Models.Appointment>

@{
    ViewData["Title"] = "My Appointments";
}
<p>
    <a asp-action="Book" class="btn btn-primary">Create Appointment</a>
</p>

<h2>My Appointments</h2>

@if (!Model.Any())
{
    <p>You have no appointments booked.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Doctor</th>
                <th>Appointment Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.Doctor.Name</td>
                    <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd")</td>
                    <td>@appointment.Status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@appointment.Id" class="btn btn-danger">Cancel</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
